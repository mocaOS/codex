{
  "name": "directus-extension-codex",
  "type": "module",
  "version": "1.0.0",
  "description": "Codex extension for Directus",
  "keywords": [
    "directus",
    "directus-extension",
    "directus-extension-bundle"
  ],
  "icon": "extension",
  "files": [
    "dist"
  ],
  "directus:extension": {
    "type": "bundle",
    "path": {
      "app": "dist/app.js",
      "api": "dist/api.js"
    },
    "entries": [
      {
        "type": "hook",
        "name": "init",
        "source": "src/init/index.ts"
      },
      {
        "type": "hook",
        "name": "codex-seed",
        "source": "src/seed/index.ts"
      },
      {
        "type": "hook",
        "name": "filter-codex-fields",
        "source": "src/hooks/filter-codex-fields.ts"
      }
    ],
    "host": "^10.10.0"
  },
  "scripts": {
    "build": "directus-extension build",
    "dev": "directus-extension build -w --no-minify",
    "link": "directus-extension link",
    "add": "directus-extension add"
  },
  "dependencies": {
    "@local/config": "workspace:*",
    "@local/types": "workspace:*",
    "cli-progress": "^3.12.0"
  },
  "devDependencies": {
    "@directus/extensions-sdk": "^16.0.2",
    "@types/cli-progress": "^3.11.6",
    "@types/node": "^22.18.10",
    "typescript": "^5.9.3"
  }
}
